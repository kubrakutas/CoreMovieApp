@model IEnumerable<Movie>

@if (Model.Count() != 0)
{
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="row no-gutter">
                <div class="col-md-3">
                    <img src="~/images/@item.ImageUrl" class="card-img" />
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                        <h5 class="card-title">
                            @*<a href="home/details/@item.Id">@item.Name</a>*@
                            <a asp-action="Details" asp-controller="Home" asp-route-Id="@item.Id">@item.Name</a>
                        </h5>
                        <p class="card-text">
                            @item.ShortDescription
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card mb-3">
        <p><h3>İlgili kategoride gösterilecek film yok.</h3></p>
    </div> 
}